<mvc:View
    controllerName="com.inventory.frontend.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                    	<List
                            id="list"
                            headerText="Fornecedores"
                            growing="true"
                            items="{
                                path: '/Fornecedor'
                            }" >
                            <StandardListItem
                                title="{nome}"
                                iconDensityAware="false"
                                iconInset="false" />
                        </List>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
